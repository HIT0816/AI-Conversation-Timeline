{
  "manifest_version": 3,
  "name": "AI Conversation Timeline",
  "version": "1.0.0",
  "description": "Adds a conversation history timeline to Google Gemini and ChatGPT for easy navigation and review.",
  "permissions": ["activeTab"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content-gemini.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content-chatgpt.js"],
      "css": ["styles.css"]
    }
  ]
}